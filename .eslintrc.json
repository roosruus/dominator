{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es2018": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
      "react"
  ],
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "max-len": ["error", 120],
    "no-console": "off",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
